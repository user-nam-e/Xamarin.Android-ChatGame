                                    HorizontalOptions="Fill" VerticalOptions="Fill" 
                                    FontSize="15" Clicked="editPlayer_Clicked"/>-->
                        <!--
                        </ViewCell>
                        <ViewCell>
                            <Switch IsToggled="true" VerticalOptions="CenterAndExpand" 
             HorizontalOptions="Center" />
                        </ViewCell>-->
                    </TableSection>
                </TableView.Root>
            </TableView>
        </Grid>
    </ContentPage.Content>
</ContentPage>