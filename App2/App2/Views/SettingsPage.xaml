<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.SettingsPage" >
    <NavigationPage.TitleView>
        <Grid>
            <Label Text="Настройки"
                   TextColor="White"
                   FontSize="Title" VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid>
            <BoxView x:Name="bdGradient" Scale="4" AnchorX="1" AnchorY="0">
                <BoxView.Background>
                    <LinearGradientBrush >
                        <GradientStop Color="#abdcff" Offset="0.3"/>
                        <GradientStop Color="#81FBB8" Offset="0.5"/>
                        <GradientStop Color="#90f7ec" Offset="1.0"/>
                        <GradientStop Color="#28C76F" Offset="0.3"/>
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
            <TableView Grid.Row="0" HasUnevenRows="True" BackgroundColor="Transparent">
                <TableView.Root>
                    <TableSection>
                        <ViewCell Height="70">
                            <Grid BackgroundColor="White">
                                <Grid Margin="5" BackgroundColor="Red">
                                    
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Switch IsToggled="true" VerticalOptions="Center" HorizontalOptions="Start" Grid.Column="1" />
                                </Grid>

                                
                                
                            </Grid>
                            <!--<SwitchCell x:Name="animationGradientSwitch"
                                    Text="Анимация градиента на главном экране"
                                    OnChanged="AnimationGradientSwitch_OnChanged"/>-->
                        </ViewCell>
