                        <ViewCell>
                            <Switch IsToggled="true" VerticalOptions="CenterAndExpand" 
             HorizontalOptions="Center" />
                        </ViewCell>-->
                    </TableSection>
                </TableView.Root>
            </TableView>
        </Grid>
    </ContentPage.Content>
</ContentPage>