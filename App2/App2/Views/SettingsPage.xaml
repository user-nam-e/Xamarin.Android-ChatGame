<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.SettingsPage" >
    <NavigationPage.TitleView>
        <Grid>
            <Label Text="Настройки"
                   TextColor="White"
                   FontSize="Title" VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid>
            <BoxView x:Name="bdGradient" Scale="4" AnchorX="1" AnchorY="0">
                <BoxView.Background>
                    <LinearGradientBrush >
                        <GradientStop Color="#abdcff" Offset="0.3"/>
                        <GradientStop Color="#81FBB8" Offset="0.5"/>
                        <GradientStop Color="#90f7ec" Offset="1.0"/>
                        <GradientStop Color="#28C76F" Offset="0.3"/>
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
            <TableView Grid.Row="0" HasUnevenRows="True" BackgroundColor="Transparent">
                <TableView.Root>
                    <TableSection>
                        <ViewCell Height="80">
                            <Grid BackgroundColor="White">
                                <Grid BackgroundColor="#81FBB8" Margin="2.5">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="2.5"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="23"/>
                                    </Grid.RowDefinitions>

                                    <Frame Grid.Column="1" BackgroundColor="White" Grid.RowSpan="2" HasShadow="False"/>
                                    <Label Margin="10,5,0,0" 
                                        Text="Анимация градиента на главном экране" FontSize="17" FontAttributes="Bold" TextColor="Black" />

                                    <Label x:Name="animationTurnOff" Grid.Row="1"  Margin="10,0,0,0" Text="Выкл" TextColor="Gray" FontSize="15"/>

                                    <Switch x:Name="animationGradientSwitch" Grid.Column="2"  
                                            Grid.RowSpan="2" VerticalOptions="Center" HorizontalOptions="Center"
                                            Toggled="AnimationGradientSwitch_OnChanged"/>
                                </Grid>
                            </Grid>
                            <!--<SwitchCell 
                                    Text="Анимация градиента на главном экране"
                                    OnChanged="AnimationGradientSwitch_OnChanged"/>-->
                        </ViewCell>
                        <!--<ViewCell>

                        </ViewCell>
                        -->
                        <!--<SwitchCell x:Name="localDataSwitch"
                                    Text="Использовать локальную базу данных"
                                    OnChanged="LocalDataSwitch_OnChanged"/>-->
